<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        background-color: #f8f9fa;
        /* Light gray background */
    }

    .navbar {
        background-color: transparent;
        /* Transparent background for navbar */
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        padding-top: 5px;
        /* Adjust top padding */
        padding-bottom: 5px;
        /* Adjust bottom padding */
    }

    .navbar-brand {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        /* Dark gray text color */
    }

    .navbar-toggler-icon {
        color: #333;
        /* Dark gray text color for the toggler icon */
    }

    .navbar-nav .nav-link {
        color: #333;
        /* Dark gray text color */
        margin-right: 10px;
        /* Add space between navbar links */
        font-size: 1rem;
    }

    .navbar-nav .nav-item.active .nav-link {
        color: #333;
        /* Dark gray text color for active item */
    }

    .container {
        margin-top: 40px;
        /* Increased top margin */
        padding-right: 15px;
        padding-left: 15px;
    }

    .text-muted {
        color: #6c757d;
    }

    .btn-create-project {
        background-color: #28a745;
        /* Bootstrap success color */
        color: #fff;
        /* White text color */
        font-weight: bold;
    }

    .jumbotron {
        background-color: #fff;
        /* White background for the jumbotron */
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }



    .issue-list {
        margin-top: 20px;
    }



    .no-issues-message {
        text-align: center;
        margin-top: 20px;
    }

    .no-issues-icon {
        font-size: 3rem;
        color: #ccc;
    }

    #danger {
        color: white;
        font-weight: bold;
    }
</style>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">Issue-Tracker</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a id="danger" class="nav-link btn btn-danger"
                            href="/project-details/<%= project._id %>/issues">Create
                            Issue</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="jumbotron">
            <h1 class="display-4">
                <%= project.name %>
            </h1>
            <p class="lead text-muted">Author: <%= project.author %>
            </p>
            <p class="text-muted">Description: <%= project.description %>
            </p>
        </div>

        <% if (issues.length> 0) { %>
            <div class="row">
                <div class="col-md-12">
                    <h2>Project Issues</h2>
                    <!-- Buttons for filtering and searching -->
                    <div class="d-flex">
                        <a href = "/issue/filter/<%=project._id%>" class="btn btn-primary btn-filter">Filter</a>
                    </div>

                    <!-- List of issues -->
                    <ul class="list-group issue-list">
                        <% issues.forEach(issue=> { %>
                            <li class="list-group-item">
                                <h5>Title: <%= issue.title %>
                                </h5>
                                <p>Description: <%= issue.description %>
                                </p>
                                <p>Labels: <%= issue.labels.join(', ') %></p> <!-- Print labels here -->
                                <small class="text-muted">Author: <%= issue.author %></small>
                            </li>
                        <% }); %>
                    </ul>
                    
                    
                </div>
            </div>
            <% } else { %>
                <!-- Display message if no issues -->
                <div class="row no-issues-message">
                    <div class="col-md-12">
                        <div class="no-issues-icon">&#128525;</div>
                        <p>No issues found for this project.</p>
                    </div>
                </div>
                <% } %>
    </div>

    


    <!-- Your custom script for filtering and searching -->
    
      



</body>

</html>